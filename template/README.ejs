// 将所有仓库放入一个数组
let repos = [];
for(let [language, repositories] of stars) {
  repos = repos.concat(repositories);
}

// 按 starred_at 排序，最新的在前
repos.sort((a, b) => new Date(b.updated_at) - new Date(a.updated_at));
var index = 0;
// 显示排序后的仓库
for(let repo of repos) {
  ++index;
  // 截取描述的前128个字符
  let description = repo.description ? repo.description.substring(0, 128) : '';
  if (repo.description && repo.description.length > 128) {
    description += '...';
  }
%>
<%=index%>. [<%= repo.full_name %>](<%= repo.html_url %>) 🌟 <%= repo.stargazers_count %> ⏰ <%= repo.updated_at.split("T")[0] %>
> <%= description %>
<% } %>
